{
  "linters": {
    "pep8": {
      "type": "pep8",
      "include": "(\\.py$)",
      "exclude": "(^alembic/)"
    },
    "pylint": {
      "type": "pylint",
      "include": "(\\.py$)",
      "exclude": "(^alembic/)",
      "pylint.config": "bin/pylintrc",
      "flags": ["--msg-template='{path}:{line}: {msg_id}: {msg}'"]
    }
  }
}
