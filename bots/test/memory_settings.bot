{
  "platforms": {
    "Facebook": "bb8.test.platform"
  },
  "bot": {
    "name": "MemoryAndSettings",
    "description": "test memory and settings",
    "interaction_timeout": 120,
    "admin_interaction_timeout": -1,
    "session_timeout": 864000,
    "settings": {},
    "nodes": {
      "Start": {
        "name": "Start",
        "expect_input": false,
        "next_node_id": "Root",
        "module": {
          "id": "ai.compose.content.test.text_message",
          "config": {
            "text": "In Start"
          }
        }
      },
      "Root": {
        "name": "Root",
        "expect_input": false,
        "next_node_id": "RootRouter",
        "module": {
          "id": "ai.compose.content.test.text_message",
          "config": {
            "text": "In Root"
          }
        }
      },
      "RootRouter": {
        "name": "RootRouter",
        "expect_input": true,
        "next_node_id": "Root",
        "module": {
          "id": "ai.compose.router.core.default",
          "config": {
            "links": [
              {
                "rule": {
                    "type": "regexp",
                    "params": ["memory_set"]
                },
                "end_node_id": "MemorySet",
                "ack_message": "Goto MemorySet"
              },
              {
                "rule": {
                    "type": "regexp",
                    "params": ["settings_set"]
                },
                "end_node_id": "SettingsSet",
                "ack_message": "Goto SettingsSet"
              }
            ],
            "on_error": {
              "end_node_id": "Root"
            }
          }
        }
      },
      "MemorySet": {
        "name": "MemorySet",
        "expect_input": false,
        "next_node_id": "MemoryGet",
        "module": {
          "id": "ai.compose.content.test.memory_settings",
          "config": {
            "target": "memory",
            "mode": "set",
            "data": "abc"
          }
        }
      },
      "MemoryGet": {
        "name": "MemoryGet",
        "expect_input": false,
        "next_node_id": "MemoryClear",
        "module": {
          "id": "ai.compose.content.test.memory_settings",
          "config": {
            "target": "memory",
            "mode": "get"
          }
        }
      },
      "MemoryClear": {
        "name": "MemoryClear",
        "expect_input": false,
        "next_node_id": "Root",
        "module": {
          "id": "ai.compose.content.test.memory_settings",
          "config": {
            "target": "memory",
            "mode": "clear"
          }
        }
      },
      "SettingsSet": {
        "name": "SettingsSet",
        "expect_input": false,
        "next_node_id": "SettingsGet",
        "module": {
          "id": "ai.compose.content.test.memory_settings",
          "config": {
            "target": "settings",
            "mode": "set",
            "data": "def"
          }
        }
      },
      "SettingsGet": {
        "name": "SettingsGet",
        "expect_input": false,
        "next_node_id": "SettingsClear",
        "module": {
          "id": "ai.compose.content.test.memory_settings",
          "config": {
            "target": "settings",
            "mode": "get"
          }
        }
      },
      "SettingsClear": {
        "name": "SettingsClear",
        "expect_input": false,
        "next_node_id": "Root",
        "module": {
          "id": "ai.compose.content.test.memory_settings",
          "config": {
            "target": "settings",
            "mode": "clear"
          }
        }
      }
    }
  }
}
